
<div class="container-fluid w-75">
    <h1 class="text-center display-4 m-4">Shopping List</h1>
    <div class="d-flex justify-content-between align-items-center">
        <p>Amount of food items to buy: <%=@missing_foods.size%></p>
        <p>Total value of food needed: $<%=@total_value%></p>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Food</th>
            <th scope="col">Quantity</th>
            <th scope="col">Value</th>
        </tr>
        </thead>
        <tbody>
            <% @missing_foods.each do |recipes_food| %>
            <%= render partial: 'food_row', locals: { recipes_food: recipes_food, extended:false } %> <% end %>
        </tbody>
    </table>
</div>