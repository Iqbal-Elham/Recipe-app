      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name%>
    <%= form.text_field :name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :measurement_unit%>
    <%= form.text_field :measurement_unit, class: "form-control" %>
  </div>

  <div>
    <%= form.label :price%>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div>
    <%= form.label :quantity%>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= form.submit class:"btn btn-primary mt-4"%>
  </div>
<% end %>