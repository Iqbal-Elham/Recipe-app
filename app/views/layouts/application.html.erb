<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "layouts/navbar" %>
    <div class="container">
    <%if notice%>
      <div class="alert alert-info mt-4" role="alert"><%= notice %></div>
    <%end%>
    <%if alert%>
      <p class="alert alert-danger mt-4" role="alert"><%= alert %></p>
    <%end%>
      <%= yield %>
    </div>
  </body>
</html>
